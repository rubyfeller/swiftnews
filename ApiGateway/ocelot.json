            "UpstreamHttpMethod": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "Auth0"
            },
            "AddHeadersToRequest": {
                "sub": "${Authorization}"
            }
        },
        {
            "DownstreamPathTemplate": "/api/user/{everything}",
            "DownstreamScheme": "http",
