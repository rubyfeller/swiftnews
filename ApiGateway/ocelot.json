                {
                    "Host": "users-clusterip-srv",
                    "Port": 80
                }
            ],
            "UpstreamPathTemplate": "/api/user/{everything}",
            "UpstreamHttpMethod": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "Auth0"
            },
            "AddHeadersToRequest": {
                "sub": "${Authorization}"
            }
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "",
        "ServiceDiscoveryProvider": {
            "Type": "Kubernetes",
            "Host": "https://kubernetes.default.svc",
            "Namespace": "default"
        },
        "CorsOptions": {
            "AllowedOrigins": [
                "http://localhost:3000"
            ],
            "AllowedHeaders": [
                "*"
            ],
            "AllowedMethods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ],
            "AllowCredentials": true
        }
    }
